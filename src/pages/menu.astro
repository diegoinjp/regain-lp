---
import Gallery from '../components/Gallery'
import MenuButton from '../components/MenuButton.astro'
import MenuLinks from '../components/MenuLinks'
import Modal from '../components/Modal'
import BaseLayout from '../layouts/BaseLayout.astro'
import { cast, Menu } from '../utils/config'
---

<BaseLayout title="メニュー" image="bg-[url('https://ik.imagekit.io/dvlljo/img/menu.jpg?ik-sdk-version=javascript-1.4.3?tr=w-auto')]" position="right">
  <MenuButton href="/" icon="mdi:close" />
  <h2 class="fixed top-4 left-14 text-4xl font-bold first-letter:text-hotpink-main md:top-8 md:left-20">REGAIN</h2>
  <Modal client:load />
  <Gallery galleries={cast} client:load />
  <div class="flex flex-col items-end gap-10 self-end text-xl">
    <MenuLinks client:only="preact" itemList={Menu} />
  </div>
  <div></div>
</BaseLayout>
