---
import { Icon } from 'astro-icon'

export interface Props {
  href: string
  icon: 'ci:hamburger' | 'mdi:close'
}

const { href, icon } = Astro.props
---

<div class="fixed top-6 left-6 z-10 h-6 w-6 bg-white md:top-10 md:left-11">
  <a href={href} rel="prefetch" aria-label="menu">
    <Icon name={icon} />
  </a>
</div>

<style lang="css">
  [astro-icon] {
    color: black;
    /* OR */
    fill: black;
  }
</style>
